<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Copy the PDBs from the NuGet packages to get file names and line numbers in stack traces. -->
    <CopyDebugSymbolFilesFromPackages>true</CopyDebugSymbolFilesFromPackages>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="IceRpc.Slice.Tools" Version="0.2.1" PrivateAssets="All" />
    <PackageReference Include="IceRpc.Slice" Version="0.2.1" />
    <PackageReference Include="IceRpc.Deadline" Version="0.2.1" />
    <PackageReference Include="IceRpc.Retry" Version="0.2.1" />
    <None Include="telemetry.bat">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="telemetry.sh">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
